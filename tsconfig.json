{
	"extends": ["@tsconfig/node24/tsconfig.json", "@tsconfig/node-ts/tsconfig.json"],
	"include": ["./src/"],
	"compilerOptions": {
		"strict": true,
		"isolatedModules": true,
		"composite": true,

		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,

		"rootDir": "./src/",
		"outDir": "./dist/",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true
	}
}
